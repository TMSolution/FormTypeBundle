    });
</script>
{%- endblock datepicker_script -%}

{%- block timer_widget -%}
<div class="input-group date {{id}}">
    {{ block('form_widget') }} 
    <span class="input-group-addon">
        <span class="glyphicon {{icon}}"></span>
    </span>
    {% if(lazyjs) %}{{ jsblocklater(block('timer_script')) }}{% endif%}
</div>
{%- endblock timer_widget -%}

{%- block timer_script -%}
